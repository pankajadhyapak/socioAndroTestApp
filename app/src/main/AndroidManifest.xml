            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samkhyatech.testapplication.MainActivity" />
        </activity>
        <activity
            android:name=".Investigations"
            android:label="@string/title_activity_investigations"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samkhyatech.testapplication.MainActivity" />
        </activity>
        <activity
            android:name=".Medication"
            android:label="@string/title_activity_medication"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.samkhyatech.testapplication.MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
