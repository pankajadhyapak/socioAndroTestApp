<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.samkhyatech.testapplication.Medication"
    tools:showIn="@layout/activity_medication"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#ffffffff">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treatment under process:"
            android:id="@+id/TreatmentunderprocessTextView"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/Treatmentunderprocess"
            android:layout_below="@+id/TreatmentunderprocessTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Treatment Under Process"
            android:minLines="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surgery:"
            android:id="@+id/SurgeryTextView"
            android:layout_below="@id/Treatmentunderprocess"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/Surgery"
            android:layout_below="@+id/SurgeryTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Surgery"
            android:minLines="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prescription"
            android:id="@+id/Prescription"
            android:layout_below="@+id/Surgery"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="22dp"
            android:textStyle="bold" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_below="@+id/Prescription"
                android:id="@+id/PrescriptionEditText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Prescription"
                android:minLines="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You May Upload Prescription in images Section"
            android:id="@+id/PrescriptionHelpText"
            android:layout_below="@+id/PrescriptionEditText"
            android:textSize="12dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="22dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete"
            android:id="@+id/saveBtn"
            android:onClick="onCompleteBtn"
            android:layout_below="@+id/PrescriptionHelpText"
            android:layout_centerHorizontal="true"
            android:background="#1fc055"
            android:textColor="#ffffff" />


    </RelativeLayout>


</ScrollView>


